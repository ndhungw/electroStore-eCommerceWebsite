{{#if verification_msg}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{verification_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="container">
    <p>An verification email has been sent to your mail address.</p>
</div>
{{else}}
<div class="container">
    <p>The verification email was sent to your mail address.</p>
</div>
{{/if}}
