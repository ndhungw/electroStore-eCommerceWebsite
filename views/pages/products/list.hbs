										<div class="men-thumb-item text-center">
											<img src="{{this.imgURL}}" height="200" alt="">
											<div class="men-cart-pro">
												<div class="inner-men-cart-pro">
													<a href="/products/{{this.brand}}/{{this.id}}" class="link-product-add-cart">Xem chi tiết</a>
												</div>
											</div>
											<span class="product-new-top">Mới</span>
								
										</div>
										<div class="item-info-product text-center border-top mt-4">
											<h4 class="pt-1">
												<a href="/products/{{this.brand}}/{{this.id}}">{{this.name}}</a>
											</h4>
											<div class="info-product-price my-2">
												<span class="item_price">${{this.currentPrice}}</span>
												<del>${{this.oldPrice}}</del>
											</div>
