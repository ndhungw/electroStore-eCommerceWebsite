														<input type="hidden" id="productToAdd_brand" name="brand" value="{{this.brand}}">
														<input type="hidden" id="productToAdd_count" name="qty" value="1">
														<input type="hidden" id="productToAdd_price" name="price" value="{{this.currentPrice}}">
														<input type="hidden" id="productToAdd_discount" name="discount" value="0">
														<input type="hidden" id="productToAdd_imgURL" name="imgURL" value="{{this.imgURL}}">
														<input type="hidden" name="business" value=" ">
														<input type="hidden" name="currency_code" value="USD">
